<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sssssssssssssss"
    tools:context="com.example.kantu.piaknows.user">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <Button
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/lesson"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:background="@drawable/lesson"
                />

            <Button
                android:id="@+id/recital"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/quickplay" />

            <Button
                android:id="@+id/kwez"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="quiz" />

            <Button
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/progressss"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:background="@drawable/achievements" />

            <Button
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/games"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:background="@drawable/games" />

            <Button
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/about"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:background="@drawable/about"/>

            <Button
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/logout"
                android:background="@drawable/logout"
                android:layout_width="250dp"
                android:layout_height="80dp"/>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>

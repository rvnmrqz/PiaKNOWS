<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/sssssssssssssss"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kantu.piaknows.song">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:background="@drawable/difficulty"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_width="120dp"
            android:layout_height="40dp"
            />

        <Button
            android:background="@drawable/easy"
            android:id="@+id/easy"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="240dp"
            android:layout_height="90dp" />


        <Button
            android:id="@+id/medium"
            android:background="@drawable/medium"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="240dp"
            android:layout_height="90dp" />

        <Button
            android:id="@+id/hard"
            android:background="@drawable/hard"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="240dp"
            android:layout_height="90dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sssssssssssssss"
    tools:context="com.example.kantu.piaknows.mediummenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you want to play"/>

        <Button
            android:id="@+id/whole"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:background="@drawable/wholesong"/>

        <TextView
            android:layout_marginTop="50dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:textSize="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"/>


        <Button
            android:id="@+id/half"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:background="@drawable/partbypart"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
